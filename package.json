{
  "name": "@sptrader/chart-lib",
  "version": "1.0.0",
  "description": "Beautiful financial charts with smooth transitions and auto-timeframe switching",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
